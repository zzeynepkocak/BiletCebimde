@model BiletCebimde.ViewModels.DashboardViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<BiletCebimde.Models.Users> UserManager

@{
    ViewData["Title"] = "Dashboard";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRoles = currentUser != null ? await UserManager.GetRolesAsync(currentUser) : new List<string>();
    var isAdmin = userRoles.Contains("Admin");
    var isOrganizer = userRoles.Contains("Organizer");
    var isUser = !isAdmin && !isOrganizer;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-speedometer2"></i> Dashboard
        </h2>
        <span class="badge bg-primary fs-6">
            @if (isAdmin)
            {
                <text>Admin</text>
            }
            else if (isOrganizer)
            {
                <text>Organizatör</text>
            }
            else
            {
                <text>Kullanıcı</text>
            }
        </span>
    </div>

    @if (isAdmin)
    {
        <!-- Admin Dashboard -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-primary shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Toplam Etkinlik</h6>
                                <h2 class="mb-0">@Model.TotalEvents</h2>
                            </div>
                            <i class="bi bi-calendar-event fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-success shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Toplam Kullanıcı</h6>
                                <h2 class="mb-0">@Model.TotalUsers</h2>
                            </div>
                            <i class="bi bi-people fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-info shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Toplam Kayıt</h6>
                                <h2 class="mb-0">@Model.TotalRegistrations</h2>
                            </div>
                            <i class="bi bi-clipboard-check fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-warning shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Kategori/Mekan</h6>
                                <h2 class="mb-0">@(Model.TotalCategories + Model.TotalVenues)</h2>
                                <small class="text-white-50">@Model.TotalCategories Kategori, @Model.TotalVenues Mekan</small>
                            </div>
                            <i class="bi bi-tags fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- En Çok Kayıt Alan Etkinlikler -->
        @if (Model.TopEvents != null && Model.TopEvents.Any())
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trophy"></i> En Çok Kayıt Alan Etkinlikler
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Etkinlik Adı</th>
                                    <th>Kategori</th>
                                    <th>Mekan</th>
                                    <th class="text-end">Kayıt Sayısı</th>
                                    <th class="text-end">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.TopEvents.Count; i++)
                                {
                                    var topEvent = Model.TopEvents[i];
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@(i + 1)</span>
                                        </td>
                                        <td><strong>@topEvent.EventTitle</strong></td>
                                        <td><span class="badge bg-info">@topEvent.CategoryName</span></td>
                                        <td>@topEvent.VenueName</td>
                                        <td class="text-end">
                                            <span class="badge bg-success">@topEvent.RegisteredCount</span>
                                        </td>
                                        <td class="text-end">
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@topEvent.EventId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Detay
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else if (isOrganizer)
    {
        <!-- Organizer Dashboard -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card text-white bg-primary shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Oluşturduğum Etkinlikler</h6>
                                <h2 class="mb-0">@Model.TotalEvents</h2>
                            </div>
                            <i class="bi bi-calendar-plus fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card text-white bg-success shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Toplam Kayıt</h6>
                                <h2 class="mb-0">@Model.TotalRegistrations</h2>
                            </div>
                            <i class="bi bi-clipboard-check fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- En Çok İlgi Gören Etkinliklerim -->
        @if (Model.TopEvents != null && Model.TopEvents.Any())
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-star-fill"></i> En Çok İlgi Gören Etkinliklerim
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var topEvent in Model.TopEvents)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-warning">
                                    <div class="card-body">
                                        <h6 class="card-title">@topEvent.EventTitle</h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="bi bi-tag"></i> @topEvent.CategoryName<br />
                                                <i class="bi bi-geo-alt"></i> @topEvent.VenueName
                                            </small>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-success">@topEvent.RegisteredCount Kayıt</span>
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@topEvent.EventId" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> Henüz etkinlik oluşturmadınız.
                <a asp-controller="Events" asp-action="Create" class="alert-link">İlk etkinliğinizi oluşturmak için tıklayın.</a>
            </div>
        }
    }
    else
    {
        <!-- User Dashboard -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card text-white bg-primary shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-white-50">Katıldığım Etkinlikler</h6>
                                <h2 class="mb-0">@Model.TotalRegistrations</h2>
                            </div>
                            <i class="bi bi-calendar-check fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Son Katıldığım Etkinlik -->
        @if (Model.LastEvent != null)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Son Katıldığım Etkinlik
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="card-title">@Model.LastEvent.EventTitle</h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Tarih:</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.LastEvent.EventDate.ToString("dd.MM.yyyy HH:mm")</strong>
                                </dd>
                                <dt class="col-sm-4">Kategori:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.LastEvent.CategoryName</span>
                                </dd>
                                <dt class="col-sm-4">Mekan:</dt>
                                <dd class="col-sm-8">@Model.LastEvent.VenueName</dd>
                                <dt class="col-sm-4">Kayıt Tarihi:</dt>
                                <dd class="col-sm-8">
                                    <small class="text-muted">@Model.LastEvent.RegistrationDate.ToString("dd.MM.yyyy HH:mm")</small>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.LastEvent.EventId" 
                               class="btn btn-primary">
                                <i class="bi bi-eye"></i> Detayları Gör
                            </a>
                            <br />
                            <a asp-controller="Registrations" asp-action="MyRegistrations" 
                               class="btn btn-outline-secondary mt-2">
                                <i class="bi bi-list"></i> Tüm Kayıtlarım
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle"></i> 
                <strong>Henüz hiçbir etkinliğe kayıt olmadınız.</strong>
                <br />
                <a asp-controller="Events" asp-action="Index" class="alert-link mt-2 d-inline-block">
                    Etkinlikleri görüntülemek için tıklayın.
                </a>
            </div>
        }
    }

    <!-- Hızlı Erişim -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-lightning-charge"></i> Hızlı Erişim
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary w-100">
                        <i class="bi bi-calendar-event"></i> Etkinlikler
                    </a>
                </div>
                @if (isAdmin)
                {
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-success w-100">
                            <i class="bi bi-tags"></i> Kategoriler
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Venues" asp-action="Index" class="btn btn-outline-info w-100">
                            <i class="bi bi-geo-alt"></i> Mekanlar
                        </a>
                    </div>
                }
                @if (isOrganizer || isAdmin)
                {
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Events" asp-action="Create" class="btn btn-outline-warning w-100">
                            <i class="bi bi-plus-circle"></i> Yeni Etkinlik
                        </a>
                    </div>
                }
                @if (isUser || isOrganizer)
                {
                    <div class="col-md-3 mb-2">
                        <a asp-controller="Registrations" asp-action="MyRegistrations" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-list-check"></i> Kayıtlarım
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

