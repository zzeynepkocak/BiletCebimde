@model BiletCebimde.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Etkinlik Sil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Etkinlik Sil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Uyarı!</strong> Bu işlem geri alınamaz. Etkinlik ve tüm kayıtlar kalıcı olarak silinecektir.
                    </div>

                    <h4 class="mb-4">Silmek istediğiniz etkinlik:</h4>

                    <dl class="row">
                        <dt class="col-sm-3">Başlık:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Açıklama:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Tarih:</dt>
                        <dd class="col-sm-9">
                            @Model.Date.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))
                            @Model.Date.ToString("HH:mm")
                        </dd>

                        <dt class="col-sm-3">Yer:</dt>
                        <dd class="col-sm-9">@Model.VenueName</dd>

                        <dt class="col-sm-3">Kategori:</dt>
                        <dd class="col-sm-9">@Model.CategoryName</dd>

                        <dt class="col-sm-3">Kontenjan:</dt>
                        <dd class="col-sm-9">@Model.RegisteredCount / @Model.Capacity</dd>

                        @if (!string.IsNullOrEmpty(Model.OrganizerName))
                        {
                            <dt class="col-sm-3">Organizatör:</dt>
                            <dd class="col-sm-9">@Model.OrganizerName</dd>
                        }
                    </dl>

                    @if (Model.RegisteredCount > 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i>
                            Bu etkinliğe <strong>@Model.RegisteredCount</strong> kişi kayıtlı. Etkinlik silindiğinde tüm kayıtlar da silinecektir.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

