@model BiletCebimde.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Etkinlik Detayları";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Model.Title</h3>
                </div>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div style="height: 400px; overflow: hidden; background-color: #f8f9fa;">
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid w-100" style="height: 100%; object-fit: cover;" />
                    </div>
                }
                <div class="card-body">
                    <!-- Kategori ve Durum Badge'leri -->
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.CategoryName))
                        {
                            <span class="badge bg-info text-dark me-2">
                                <i class="bi bi-tag"></i> @Model.CategoryName
                            </span>
                        }
                        @if (Model.Date < DateTime.Now)
                        {
                            <span class="badge bg-secondary">Geçmiş Etkinlik</span>
                        }
                        else if (Model.RegisteredCount >= Model.Capacity)
                        {
                            <span class="badge bg-danger">Kontenjan Dolu</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Kayıt Açık</span>
                        }
                    </div>

                    <!-- Açıklama -->
                    <div class="mb-4">
                        <h5 class="text-muted">Açıklama</h5>
                        <p class="lead">@Model.Description</p>
                    </div>

                    <!-- Etkinlik Bilgileri -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-calendar-event fs-4 text-primary me-3"></i>
                                <div>
                                    <h6 class="mb-1">Tarih ve Saat</h6>
                                    <p class="mb-0">
                                        <strong>@Model.Date.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))</strong><br>
                                        <span class="text-muted">@Model.Date.ToString("HH:mm")</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-geo-alt fs-4 text-danger me-3"></i>
                                <div>
                                    <h6 class="mb-1">Yer</h6>
                                    <p class="mb-0">
                                        <strong>@Model.VenueName</strong>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex align-items-start">
                                <i class="bi bi-people fs-4 text-success me-3"></i>
                                <div>
                                    <h6 class="mb-1">Kontenjan</h6>
                                    <p class="mb-0">
                                        <strong>@Model.RegisteredCount / @Model.Capacity</strong>
                                        @{
                                            var remaining = Model.Capacity - Model.RegisteredCount;
                                        }
                                        @if (remaining > 0)
                                        {
                                            <span class="text-success">(@remaining boş yer kaldı)</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.OrganizerName))
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-person fs-4 text-warning me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Organizatör</h6>
                                        <p class="mb-0">
                                            <strong>@Model.OrganizerName</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Yan Panel - Kayıt İşlemleri -->
        <div class="col-md-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Kayıt İşlemleri</h5>
                </div>
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (Model.IsRegistered)
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="bi bi-check-circle"></i> 
                                <strong>Bu etkinliğe kayıtlısınız!</strong>
                            </div>
                            <form asp-controller="Registrations" asp-action="Unregister" method="post" class="d-grid">
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-x-circle"></i> Kaydı İptal Et
                                </button>
                            </form>
                        }
                        else if (Model.Date < DateTime.Now)
                        {
                            <div class="alert alert-secondary" role="alert">
                                <i class="bi bi-info-circle"></i> 
                                Bu etkinlik geçmiş bir tarihte gerçekleşmiştir.
                            </div>
                        }
                        else if (Model.RegisteredCount >= Model.Capacity)
                        {
                            <div class="alert alert-warning" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> 
                                <strong>Kontenjan dolmuştur.</strong>
                            </div>
                        }
                        else if (Model.CanRegister)
                        {
                            <form asp-controller="Registrations" asp-action="Register" method="post" class="d-grid">
                                <input type="hidden" name="eventId" value="@Model.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-person-plus"></i> Etkinliğe Katıl
                                </button>
                            </form>
                            <p class="text-muted small mt-2 mb-0">
                                <i class="bi bi-info-circle"></i> 
                                @(Model.Capacity - Model.RegisteredCount) boş yer kaldı.
                            </p>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle"></i> 
                            Etkinliğe kayıt olmak için giriş yapmanız gerekmektedir.
                        </div>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </a>
                    }
                </div>
            </div>

            <!-- Geri Dön Butonu -->
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-left"></i> Etkinlik Listesine Dön
                </a>
            </div>

            <!-- Organizatör/Admin için Düzenleme Butonları -->
            @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
            {
                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-pencil"></i> Düzenle
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100">
                        <i class="bi bi-trash"></i> Sil
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Başarı/Hata Mesajları -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

