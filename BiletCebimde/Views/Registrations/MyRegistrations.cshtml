@model IEnumerable<BiletCebimde.ViewModels.RegistrationViewModel>

@{
    ViewData["Title"] = "Kayıt Olduğum Etkinlikler";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-calendar-check"></i> Kayıt Olduğum Etkinlikler
        </h2>
        <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Etkinliklere Dön
        </a>
    </div>

    <!-- Başarı/Hata Mesajları -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Kayıt Olunan Etkinlikler -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var registration in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm @(registration.IsPastEvent ? "border-secondary" : "")">
                        <div class="card-header @(registration.IsPastEvent ? "bg-secondary text-white" : "bg-primary text-white")">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title mb-0">@registration.EventTitle</h5>
                                @if (registration.IsPastEvent)
                                {
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-clock-history"></i> Geçmiş Etkinlik
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted small">
                                @if (registration.EventDescription.Length > 100)
                                {
                                    @registration.EventDescription.Substring(0, 100)@:...
                                }
                                else
                                {
                                    @registration.EventDescription
                                }
                            </p>

                            <hr />

                            <dl class="row mb-0 small">
                                <dt class="col-5">Tarih:</dt>
                                <dd class="col-7">
                                    <strong>@registration.EventDate.ToString("dd.MM.yyyy HH:mm")</strong>
                                </dd>

                                <dt class="col-5">Kategori:</dt>
                                <dd class="col-7">
                                    <span class="badge bg-info">@registration.CategoryName</span>
                                </dd>

                                <dt class="col-5">Mekan:</dt>
                                <dd class="col-7">
                                    <i class="bi bi-geo-alt"></i> @registration.VenueName
                                </dd>

                                <dt class="col-5">Adres:</dt>
                                <dd class="col-7 text-muted">
                                    <small>@registration.VenueAddress</small>
                                </dd>

                                <dt class="col-5">Organizatör:</dt>
                                <dd class="col-7">
                                    <i class="bi bi-person"></i> @registration.OrganizerName
                                </dd>

                                <dt class="col-5">Kontenjan:</dt>
                                <dd class="col-7">
                                    <span class="badge bg-success">@registration.EventRegisteredCount / @registration.EventCapacity</span>
                                </dd>

                                <dt class="col-5">Kayıt Tarihi:</dt>
                                <dd class="col-7 text-muted">
                                    <small>@registration.RegistrationDate.ToString("dd.MM.yyyy HH:mm")</small>
                                </dd>
                            </dl>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-grid gap-2">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@registration.EventId" 
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> Detayları Gör
                                </a>
                                @if (!registration.IsPastEvent)
                                {
                                    <form asp-action="CancelRegistration" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="eventId" value="@registration.EventId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100" 
                                                onclick="return confirm('Bu etkinlik kaydınızı iptal etmek istediğinizden emin misiniz?');">
                                            <i class="bi bi-x-circle"></i> Kaydı İptal Et
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-secondary w-100" disabled>
                                        <i class="bi bi-lock"></i> Geçmiş Etkinlik
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> 
            <strong>Henüz hiçbir etkinliğe kayıt olmadınız.</strong>
            <br />
            <a asp-controller="Events" asp-action="Index" class="alert-link mt-2 d-inline-block">
                Etkinlikleri görüntülemek için tıklayın.
            </a>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

