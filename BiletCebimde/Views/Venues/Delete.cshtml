@model BiletCebimde.ViewModels.VenueViewModel

@{
    ViewData["Title"] = "Mekan Sil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Mekan Sil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Uyarı!</strong> Bu işlem geri alınamaz. Mekan kalıcı olarak silinecektir.
                    </div>

                    <h4 class="mb-4">Silmek istediğiniz mekan:</h4>

                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Mekan Adı:</dt>
                        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-3">Adres:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">Etkinlik Sayısı:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.EventCount</span>
                        </dd>
                    </dl>

                    @if (Model.EventCount > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-circle"></i>
                            <strong>Dikkat!</strong> Bu mekana bağlı <strong>@Model.EventCount</strong> etkinlik bulunmaktadır. 
                            Mekanı silmek için önce bu etkinlikleri silmeniz veya başka bir mekana taşımanız gerekmektedir.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-danger" @(Model.EventCount > 0 ? "disabled" : "")>
                                <i class="bi bi-trash"></i> Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

